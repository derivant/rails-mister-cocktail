<% color = "##{SecureRandom.hex(3)}" %>

<div class="container">
  <div class="index" style="background-color:<%= color %>;">
    <div class="col-6 justify-content-center">
      <%= simple_form_for [@cocktail, @dose] do |d| %>
        <%= d.association :ingredient, collection: Ingredient.order('name ASC') %>
        <%= d.input :description %>
        <%= d.button :submit %>
      <% end %>
    </div>
  </div>
</div>

